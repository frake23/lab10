<%= form_tag method: :post, class: 'd-flex flex-column my-4' do %>
  <div class="mb-4">
    <label for="arr" class="form-label">Последовательность чисел</label>
    <input
      id="arr"
      name="arr"
      type="text"
      required
      value="1 5 25 0 125 11 1 625 23"
      class="form-control"
    >
  </div>
  <div class="d-flex">
    <button type="submit" class="btn btn-dark mx-2" formaction="/calc.html">Получить ответ в HTML</button>
    <button type="submit" class="btn btn-dark mx-2" formaction="/calc.xml">Получить ответ в XML</button>
    <button type="submit" class="btn btn-dark" formaction="/rawcalc.xml">Посмотреть XML</button>
  </div>
<% end %>